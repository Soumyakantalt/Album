<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:background="#fff"
    android:layout_marginTop="08dp"
    android:layout_marginLeft="08dp"
    android:layout_marginRight="08dp"
    android:layout_marginBottom="08dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="6dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraint_layout">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/art_work_image"
            android:layout_marginTop="08dp"
            android:layout_marginLeft="08dp"
            android:layout_marginBottom="08dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/artist_name"
            android:text=""
            android:textColor="#3b3b5a"
            android:textSize="16dp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="08dp"
            android:layout_marginLeft="08dp"
            android:layout_marginRight="08dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/art_work_image"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/track_name"
            android:text=""
            android:textColor="@android:color/darker_gray"
            android:textSize="16dp"
            android:textStyle="normal"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="08dp"
            android:layout_marginRight="08dp"
            app:layout_constraintTop_toBottomOf="@+id/artist_name"
            app:layout_constraintLeft_toRightOf="@+id/art_work_image"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/track_price"
            android:text=""
            android:textColor="#88bc6e"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="08dp"
            android:layout_marginRight="08dp"
            android:layout_marginBottom="08dp"
            app:layout_constraintLeft_toRightOf="@+id/art_work_image"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/release_date"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:textStyle="normal"
            android:layout_marginLeft="08dp"
            android:layout_marginRight="08dp"
            android:layout_marginBottom="08dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
